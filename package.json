{
  "name": "proposal-copilot",
  "version": "1.0.0",
  "description": "Local-First Proposal AI Assistant",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "build": "tsc && vite build && electron-builder",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "author": "zgldh",
  "license": "MIT",
  "dependencies": {
    "antd": "^5.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.proposal.copilot",
    "files": [
      "dist/**/*",
      "package.json"
    ]
  }
}
